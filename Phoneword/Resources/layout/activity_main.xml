<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Enter Phone word"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:accessibilityHeading="false" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PoneNomberText"
        android:layout_marginRight="161.0dp"
        android:text="1-855-XAMARIN"
        android:layout_below="@id/textView1" />
    <Button
        android:text="TRANSLATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/PoneNomberText"
        android:id="@+id/TranslateButton"
        android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:textStyle="bold"
        android:layout_marginRight="0.0dp" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TranslateButton"
        android:id="@+id/TranslatedPhoneword"
         />

</RelativeLayout>